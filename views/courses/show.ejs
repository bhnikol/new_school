<style>
  .button {
    background-color: #4c8baf;
    border-radius: 50px;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
  }
</style>
<Body
  background="https://previews.123rf.com/images/krekdm/krekdm1608/krekdm160800053/61579452-back-to-school-seamless-pattern-can-be-used-for-wallpaper-website-background-wrapping-paper-study-br.jpg"
  style="height: 100%"
>
  <div class="mt-4">
    <div class="row">
      <div class="col-lg-3">
        <a href="#" class="button">Mua Khóa Học</a>
      </div>

      <div class="col-lg-9">
        <h2><%= course.name %></h2>
        <iframe
          width="560"
          height="315"
          src="https://www.youtube.com/embed/<%= course.videoId %>"
          title="YouTube video player"
          frameborder="0"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
          allowfullscreen
        ></iframe>
        <div
          style="
            background-color: #fff;
            width: 565px;
            border-radius: 20px;
            padding: 20px;
          "
        >
          <p class="mt-4"><%= course.description %></p>
        </div>
        <form
          class="mt-4"
          method="POST"
          action="/comment/create/<%= course._id %>"
          style="background-color: #fff; padding: 20px; width: 565px;border-radius: 12px;margin-bottom: 10px;"
        >
          <div class="mb-3">
            <label for="content" class="form-label">Nội dung bình luận</label>
            <textarea
              type="text"
              class="form-control"
              id="content"
              name="content"
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Thêm bình luận</button>
          <% comments.forEach(function(comment){ %>
          <p style="margin-top:10px"><%= comment.content %></p>
          <% }); %>
        </form>
      </div>
    </div>
  </div>
</Body>
